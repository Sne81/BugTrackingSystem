@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Bugs";
}

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Bug List</h3>
    <a class="btn btn-primary" asp-controller="Bug" asp-action="Create">New Bug</a>
  </div>

  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th scope="col">Bug ID</th>
          <th scope="col">Title</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var bug in Model)
            {
                <tr>
                    <td class="align-middle">@bug.Id</td>
                    <td class="align-middle">@bug.Title</td>
                    <td class="align-middle">
                        <span class="badge bg-secondary">@bug.Status</span>
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-sm btn-outline-primary me-2" asp-controller="Bug" asp-action="Edit" asp-route-id="@bug.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-info" asp-controller="Bug" asp-action="Edit" asp-route-id="@bug.Id">Update Status</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-4">No bugs found.</td>
            </tr>
        }
      </tbody>
    </table>
  </div>
</div>
