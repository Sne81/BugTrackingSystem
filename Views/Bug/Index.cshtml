@model IEnumerable<BugTrackingSystem.Models.Bug>

@{
    ViewData["Title"] = "Bug List";
    var role = Context.Session.GetString("Role");
}

<div class="container mt-4">
    <h2 class="mb-4">Bug List</h2>

    @* Only Admin can create *@
    @if (role == "Admin")
    {
        <a asp-action="Create" class="btn btn-primary mb-3">Create New Bug</a>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Bug ID</th>
                <th>Title</th>
                <th>Severity</th>
                <th>Status</th>
                <th>Created Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var bug in Model)
                {
                    <tr>
                        <td>@bug.BugId</td>
                        <td>@bug.Title</td>

                        <td>
                            <span class="badge bg-@(bug.Severity == "Critical" ? "danger" :
                                                    bug.Severity == "High" ? "warning" :
                                                    bug.Severity == "Medium" ? "info" : "secondary")">
                                @bug.Severity
                            </span>
                        </td>

                        <td>
                            <span class="badge bg-@(bug.Status == "Open" ? "primary" :
                                                    bug.Status == "In Progress" ? "warning" :
                                                    bug.Status == "Fixed" ? "success" : "secondary")">
                                @bug.Status
                            </span>
                        </td>

                        <td>@bug.CreatedDate.ToString("MM/dd/yyyy")</td>

                        <td>
                            @if (role == "Admin")
                            {
                                <a asp-action="Edit" asp-route-id="@bug.BugId" class="btn btn-warning btn-sm">Edit</a>
                            }
                            else
                            {
                                <span class="text-muted">View Only</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No bugs found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
