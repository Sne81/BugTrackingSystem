@{
    ViewData["Title"] = "Create Bug";
}

<div class="container mt-4">
    <h2 class="mb-4">Create Bug</h2>

    <form>
        <div class="mb-3">
            <label class="form-label">Bug Title</label>
            <input type="text" class="form-control" placeholder="Enter bug title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" rows="3" placeholder="Enter bug description"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Severity</label>
            <select class="form-select">
                <option>Low</option>
                <option>Medium</option>
                <option>High</option>
                <option>Critical</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>
