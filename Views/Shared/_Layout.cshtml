<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - BugTrackingSystem</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { padding-top: 72px; }
    .navbar-brand { font-weight: 600; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BugTracker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" asp-controller="Bug" asp-action="Index">Bugs</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Bug" asp-action="Create">Create</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main role="main" class="container">
    @RenderBody()
  </main>

  <footer class="footer bg-light mt-5">
    <div class="container text-center py-3">
      <small class="text-muted"> BugTrackingSystem</small>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
