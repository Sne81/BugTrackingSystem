@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="card border-0 shadow rounded-3">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h2 class="h4 mb-0">Welcome back</h2>
            <p class="text-muted">Sign in to continue to BugTracker</p>
          </div>
          <form method="post" asp-controller="Account" asp-action="Login" novalidate>
            <div class="mb-3">
              <label for="Username" class="form-label">Username</label>
              <input type="text" class="form-control form-control-lg" id="Username" name="Username" placeholder="Enter your username" required />
            </div>
            <div class="mb-3">
              <label for="Password" class="form-label">Password</label>
              <input type="password" class="form-control form-control-lg" id="Password" name="Password" placeholder="Enter your password" required />
            </div>
            <div class="d-grid mb-2">
              <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
            </div>
            <div class="text-center">
              <a class="small text-muted" href="#">Forgot password?</a>
            </div>
          </form>
        </div>
        <div class="card-footer bg-transparent border-0 text-center py-3">
          <small class="text-muted">Need an account? Contact your administrator.</small>
        </div>
      </div>
    </div>
  </div>
</div>
